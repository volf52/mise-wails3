#!/usr/bin/env bash
#MISE description="Run plugin tests - install and execute tool"
set -euo pipefail

mise plugin link --force wails3 .
mise cache clear
mise install wails3@1.0.0

# Capture and display the output while also verifying it
output=$(mise exec "wails3@1.0.0" -- "wails3" --version)
echo "wails3 output: $output"

if echo "$output" | grep -q 'wails3@1.0.0'; then
  echo "✓ Tests passed"
else
  echo "✗ Test failed: expected version wails3@1.0.0"
  exit 1
fi
